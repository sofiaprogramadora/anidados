<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |group_user_note| %>
      <tr>
        <td><%= group_user_note.title %></td>
        <td><%= group_user_note.body %></td>
        <td><%= group_user_note.user %></td>
        <td><%= link_to 'Show', group_user_note %></td>
        <td><%= link_to 'Edit', edit_group_user_note_path(group_user_note) %></td>
        <td><%= link_to 'Destroy', group_user_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

